<?xml version="1.0"?>
<job_config>
  <input>
    <audio>
      <wav version="1">
        <file_name>-</file_name> <!-- string -->
        <timecode_frame_rate>23.976</timecode_frame_rate>  <!-- Set by the wrapper's fps arg, if not given defaults to not_indicated -->  
		<!-- One of: not_indicated, 23.976, 24, 25, 29.97, 30, 48, 50, 59.94, 60 -->
		
		<!-- Not sure what those are -->
        <offset>auto</offset>    <!-- string -->
        <ffoa>auto</ffoa>    <!-- string -->
        <storage>
          <local>
            <path>-</path>    <!-- string -->
          </local>
        </storage>
      </wav>
    </audio>
  </input>
  <filter>
    <audio>
      <pcm_to_ddp version="3">
        <loudness>    <!-- measure_only must be used in DD mode. (Why???) -->
          <measure_only>
            <metering_mode>1770-3</metering_mode> <!-- Have to use -3, the lastest -4 isn't supported for lossy codecs on this encoder for some reason --> 
			<!-- One of: 1770-3, 1770-2, 1770-1, LeqA -->
            <dialogue_intelligence>true</dialogue_intelligence> <!-- Good for lossy, bad for lossless -->   <!-- boolean: true or false -->
            <speech_threshold>20</speech_threshold>  <!-- 20 is recommended -->  <!-- integer: from 0 to 100 -->
          </measure_only>
        </loudness>
        <encoder_mode>-</encoder_mode>  <!-- Set in wrapper automatically -->  <!-- fixed value -->
        <bitstream_mode>complete_main</bitstream_mode>  <!-- Set in wrapper. For P2P purposes only  complete_main, music_and_effects, and commentary are relevant -->
		<!-- One of: complete_main, music_and_effects, visually_impaired, hearing_impaired, dialogue, commentary, emergency, voice_over -->
        <downmix_config>off</downmix_config>  <!-- Set by the wrapper depending on the number of downmix channels specified -->  
		<!-- One of: off, mono, stereo, 5.1 -->
        <data_rate>-</data_rate>  <!-- Bitrate, set in wrapper -->  
		<!-- One of: 32, 40, 48, 56, 64, 72, 80, 88, 96, 104, 112, 120, 128, 144, 160, 176, 192, 200, 208, 216, 224, 232, 240, 248, 256, 272, 288, 304, 320, 336, 352, 368, 384, 400, 448, 512, 576, 640, 704, 768, 832, 896, 960, 1008, 1024 -->
        <timecode_frame_rate>not_indicated</timecode_frame_rate> <!-- Just keep as not indicated, already determined in input -->
		<!-- One of: not_indicated, 23.976, 24, 25, 29.97, 30, 48, 50, 59.94, 60 -->
		
		<!-- No idea what these following 3 means, leaving as defaults -->
        <start>first_frame_of_action</start>    <!-- string -->
        <end>end_of_file</end>    <!-- string -->
        <time_base>file_position</time_base>  <!-- One of: file_position, embedded_timecode -->
		
		<!-- ADDS SILENCE TO THE HEAD OF THE TRACK in REALTIME MILLISECONDS, DO NOT USE SINCE DEE DOES NOT DIFFERENTIATE REAL TIME 
		and TIMECODE for RANGE of ENCODING, TIMECODE USES FRAMES INSTEAD OF MS -->
        <prepend_silence_duration>0.0</prepend_silence_duration>    <!-- string -->
        <append_silence_duration>0.0</append_silence_duration>    <!-- string -->
		
        <lfe_on>true</lfe_on> <!-- Set automatically based on if there's an LFE in source. Also false if downmixing to stereo/mono -->
		<!-- boolean: true or false -->
        <dolby_surround_mode>not_indicated</dolby_surround_mode>  <!-- Can be set to yes/no in wrapper, default is not_indicated -->  
		<!-- One of: yes, no, not_indicated -->
        <dolby_surround_ex_mode>not_indicated</dolby_surround_ex_mode> <!-- Can be set to yes/no in wrapper, default is not_indicated -->
		<!-- One of: yes, no, not_indicated -->
        <user_data>-1</user_data> <!-- Whats that? Just leave as is -->   <!-- integer: from -1 to 65535 -->
        <drc>
		<!-- One of: film_standard, film_light, music_standard, music_light, speech -->
		<!-- film_light default, too uncommon a change to be made settable in wrapper -->
          <line_mode_drc_profile>film_light</line_mode_drc_profile> 
          <rf_mode_drc_profile>film_light</rf_mode_drc_profile>
        </drc>
        <lfe_lowpass_filter>true</lfe_lowpass_filter>  <!-- Always enabled -->  <!-- boolean: true or false -->
        <surround_90_degree_phase_shift>true</surround_90_degree_phase_shift>  <!-- Enabled since we're using ltrt -->  <!-- boolean: true or false -->
        <surround_3db_attenuation>false</surround_3db_attenuation>  <!-- Should be false (only true if LFE has a fuckton of echo -> set manually-->  
		<!-- One of: true, false -->
        <downmix>
		<!-- One of: +3, +1.5, 0, -1.5, -3, -4.5, -6, -inf -->
		<!-- Can be made settable in wrapper, but too technical to mess with. Keeping default -->
          <loro_center_mix_level>-3</loro_center_mix_level>    
          <loro_surround_mix_level>-3</loro_surround_mix_level>
          <ltrt_center_mix_level>-3</ltrt_center_mix_level>
          <ltrt_surround_mix_level>-3</ltrt_surround_mix_level>
          <preferred_downmix_mode>ltrt</preferred_downmix_mode> <!-- We aren't doing music, so not loro. pl2 no good -> ltrt --> 
		  <!-- One of: loro, ltrt, ltrt-pl2, not_indicated -->
        </downmix>
        <allow_hybrid_downmix>false</allow_hybrid_downmix>  <!-- Whats that? Keeping default -->  <!-- boolean: true or false -->
        <embedded_timecodes>
			<!-- Off for timecodes, no need to mess with that. Frame rate auto, already set in input -->
          <starting_timecode>off</starting_timecode>    
		  <!-- 'off' disables embedded timecodes, 'auto' will use the 'start' value -->
          <frame_rate>auto</frame_rate>    
		  <!-- One of: auto, 23.976, 24, 25, 29.97, 30, 50, 59.94, 60 -->
        </embedded_timecodes>
	<custom_dialnorm>-</custom_dialnorm> <!-- Set with the wrapper, default is measured by encoder -->
      </pcm_to_ddp>
    </audio>
  </filter>
  <output>
    <ec3 version="1">
      <file_name>-</file_name>    <!-- string -->
      <storage>
        <local>
          <path>-</path>    <!-- string -->
        </local>
      </storage>
    </ec3>
  </output>
  <misc>
    <temp_dir>
      <clean_temp>true</clean_temp>
      <path>-</path>
    </temp_dir>
  </misc>
</job_config>
